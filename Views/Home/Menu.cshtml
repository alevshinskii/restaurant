@model IEnumerable<Product>

@{
    ViewData["Title"] = "Меню";
}
<div class="row">
    <div class="col-md-6">
        <h1 >Меню</h1>
    </div>
    <div class="col-md-6 text-end">
        <form class="form-inline row">
            <div class="col-6"></div>
            <div class="form-group col-4">
                <input type="text" class="form-control-plaintext border-0" name="search" placeholder="Поиск ...">
            </div>
            <div class="col-2">

                <button type="submit" class="btn btn-success">Искать</button>
            </div>
        </form>
    </div>
</div>

<div class="row mt-3">
@if (Model.Any())
{
    @foreach (var item in Model)
    {
        //@Html.DisplayFor(modelItem => item.Category.Name)

        if (item.Available > 0){
            <div class="col-md-4 col-lg-3 col-sm-6 mb-3">
                <div class="card px-0">
                    <div class="card-header">
                        <img src="@item.ImageUrl" alt="@item.ImageUrl" class="w-100"/>
                    </div>
                    <div class="card-body text-center fw-bold py-2 text-nowrap overflow-hidden">
                        @item.Name
                    </div>
                    <div class="card-footer fw-bold text-end" >
                     
                        @item.Price ₽ 
                        <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id" class="btn btn-success">В корзину</a>
                    </div>
                </div>
            </div>
        }
    }
}
else
{
    <h3>Пока нет ни одного товара..</h3>
}
</div>