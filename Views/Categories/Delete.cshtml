@model Restaurant.Models.Category

@{
    ViewData["Title"] = "Удаление";
}

<h3 class="mb-3">Вы уверены, что хотите удалить?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Name)
        </dd>
