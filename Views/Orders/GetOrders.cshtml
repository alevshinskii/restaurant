@model Restaurant.Models.OrderNumber
@using  System.Web;

<h4 class="mb-3">Статистика заказов</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetOrders" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Start" class="control-label"></label>
                <input asp-for="Start" class="form-control" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="End" class="control-label"></label>
                <input asp-for="End" class="form-control" />
                <span asp-validation-for="End" class="text-danger"></span>
            </div>


            <div class="form-group mb-3">
                <input type="submit" value="Показать" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
@{ if (Model.Number > 0)
    {
        <div class="row">
            <div class="col-md-4">
                <label>Число заказов: </label> @Model.Number<br />
                <label>Общая сумма заказов: </label> @Model.TotalSum<br />
                <label>Средняя стоимость заказа: </label> @Model.Average
            </div>
        </div>
    }
}
