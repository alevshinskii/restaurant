@using Microsoft.AspNetCore.Identity;
@using System.Web;
@model IEnumerable<IdentityUser> 
@{
    ViewData["Title"] = "Пользователи";
}
<h2 class="mb-3">Список пользователей</h2>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <table class="table">
            <tr>
                <th>Имя пользователя</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="EditRole" asp-route-id="@user.Id" class="text-decoration-none">@HttpUtility.HtmlDecode("&#9998;")</a>
                    </td>
                    <td>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="text-decoration-none">@HttpUtility.HtmlDecode("&#10006;")</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
