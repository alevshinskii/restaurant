@using Microsoft.AspNetCore.Identity
@using System.Web
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Роли";
}
<h2 class="mb-3">Роли</h2>
<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <table class="table mb-3">
            <tr>
                <th>Роль</th>
                <th></th>
            </tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <a asp-action="DeleteRole" asp-route-id="@role.Id" class="text-decoration-none">@HttpUtility.HtmlDecode("&#10006;")</a>
                    </td>
                </tr>
            }
        </table>
        <div class="form-group mb-3">
            <a asp-action="CreateRole" class="btn btn-success">Добавить роль</a>
        </div>
    </div>
</div>