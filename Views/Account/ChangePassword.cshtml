@model Restaurant.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}
<h2 class="mb-3">Изменение пароля</h2>
<form asp-action="ChangePassword" asp-controller="Account">
    <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
    <div class="form-group mb-3">
        <label asp-for="OldPassword" class="control-label">Старый пароль</label>
        <input type="password" asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="NewPassword" class="control-label">Новый пароль</label>
        <input type="password" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <input type="submit" value="Сохранить" class="btn btn-success" />
    </div>
</form>

